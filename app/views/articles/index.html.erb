<h1>Articles listing page</h1>


<table >
  <thead>
    <tr>
      <th>Title</th>
      <th >Description</th>
      <th colspan = '9' >Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @article_all.each do |display_article| %>
      <tr>
        <td><%= display_article.title %></td>
        <td><%= display_article.description %></td>
        <td><%= link_to 'Show', article_path(display_article) %></td>
        <td><%= link_to 'Edit', edit_article_path(display_article) %></td>
        <td><%= link_to 'Delete', article_path(display_article), method: :Delete, data: {confirm: "Are you sure?"}  %></td>
      </tr>
    <% end %>
  </tbody>

</table>
<p>
  <%= link_to 'Create article', new_article_path %>
</p>
